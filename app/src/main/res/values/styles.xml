<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/colorMainLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="TextHeaderStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorMainLight</item>
    </style>

    <style name="TextCommonStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorMainLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCommonHighlightStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryLightColorRed</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
    </style>


</resources>